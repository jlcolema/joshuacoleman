						<img src="{{ metadata.path.work }}/{{ slug }}-small-160.jpg" srcset="{{ metadata.path.work }}/{{ slug }}-small-320.jpg 320w, {{ metadata.path.work }}/{{ slug }}-small.jpg 640w" width="320" height="568" loading="lazy" alt="The {{ title }} project when viewed at smaller screen sizes." class="project__image project__image--small" />

					{% endif %}

				</div>

			</div>

			<figcaption class="project__figcaption">

				<p class="visually-hidden">Examples of {{ title }} at different screen sizes.</p>

				{% if url.external or url.archive %}

					<div class="project__url">

						<a href="{% if url.external %}{{ url.external }}{% else %}{{ url.archive }}{% endif %}" rel="external" class="project__link">Visit the {% if url.archive %}Archived{% endif %} Site</a>

					</div>

				{% endif %}

