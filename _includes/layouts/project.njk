	{%- if collections.work %}

		{%- set previousProject = collections.work | getPreviousCollectionItem %}

		{%- set nextProject = collections.work | getNextCollectionItem %}

		{%- if nextProject or previousProject %}

			<nav class="entry-nav">

				<ul class="entry-nav__list">

					{%- if previousProject %}

						<li class="entry-nav__item entry-nav__item--previous">

							<span class="entry-nav__label">Previous:</span>

							<a href="{{ previousProject.url }}" class="entry-nav__link">{{ previousProject.data.title }}</a>

						</li>

					{% endif %}

					{%- if nextProject %}

						<li class="entry-nav__item entry-nav__item--next">

							<span class="entry-nav__label">Next:</span>

							<a href="{{ nextProject.url }}" class="entry-nav__link">{{ nextProject.data.title }}</a>

						</li>

					{% endif %}

				</ul>

			</nav>

		{%- endif %}

