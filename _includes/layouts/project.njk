<section class="section section--project">

	<header class="section__header">

		<h1 class="section__title">{{ title }}</h1>

		<div class="section__overview">

			<p>{{ overview }}</p>

		</div>

	</header>

	<div class="section__content">

		<figure class="project__figure">

			<div class="project__samples">

				{% if samples.banner == true %}

					<img src="{{ metadata.path.work }}/{{ slug }}-banner-160.png" srcset="{{ metadata.path.work }}/{{ slug }}-banner-320.png 320w, {{ metadata.path.work }}/{{ slug }}-banner-640.png 640w, {{ metadata.path.work }}/{{ slug }}-banner-1280.png 1280w, {{ metadata.path.work }}/{{ slug }}-banner.png 2560w" width="1280" height="1024" loading="lazy" alt="The {{ title }} project banner." class="project__image project__image--banner" />

				{% else %}

					<img src="{{ metadata.path.work }}/{{ slug }}-large-160.jpg" srcset="{{ metadata.path.work }}/{{ slug }}-large-320.jpg 320w, {{ metadata.path.work }}/{{ slug }}-large-640.jpg 640w, {{ metadata.path.work }}/{{ slug }}-large-1280.jpg 1280w, {{ metadata.path.work }}/{{ slug }}-large.jpg 2560w" width="1280" height="1024" loading="lazy" alt="The {{ title }} project when viewed at larger screen sizes." class="project__image project__image--large" />

				{% endif %}

				<div class="project__overlay {% if samples.medium == true %}project__overlay--medium{% endif %}">

					{% if samples.medium == true %}

						<img src="{{ metadata.path.work }}/{{ slug }}-medium-160.jpg" srcset="{{ metadata.path.work }}/{{ slug }}-medium-320.jpg 320w, {{ metadata.path.work }}/{{ slug }}-medium-640.jpg 640w, {{ metadata.path.work }}/{{ slug }}-medium.jpg 1280w" width="640" height="819" loading="lazy" alt="The {{ title }} project when viewed at medium screen sizes." class="project__image project__image--medium" />

