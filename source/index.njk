{# Recent Notes

<section class="section section--recent-notes">

	<header class="section__header">

		<h2 class="section__title">Recent Notes</h2>

		<div class="section__overview">

			<p>A short description.</p>

		</div>

	</header>

	<div class="section__content">

		<ol reversed class="notes__list">

			{% for note in collections.notes | head(-1 * 3) | reverse %}

				<li class="notes__item">

					<article class="">

						<h3 class="">
							<a href="{{ note.url }}" {% if entry.url == page.url %}aria-current="page"{% endif %} class="">{{ note.data.title }}</a>
						</h3>

						<span class="visually-hidden">Posted on</span>

						<time datetime="{{ note.date | htmlDateString }}" class="">{{ note.date | readableDate("LLLL d, yyyy") }}</time>

						<p class="">{{ note.data.excerpt }}</p>

						{{ note.data.category }}

						<dl class="">

							<dt class="">Tags</dt>

							{% for tag in note.data.tags | filterTagList %}

								<dd class="">

									<a href="/tags/{{ tag | slugify }}/" class="">{{ tag }}</a>

								</dd>

							{% endfor %}

						</dl>

					</article>

				</li>

			{% endfor %}

		</ol>

	</div>

</section>

 #}
